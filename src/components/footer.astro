---
const links = [
  {
    name: 'Tab 1',
    links: [
      { name: 'Link 1', href: '/' },
      { name: 'Link 2', href: '/' },
      { name: 'Link 3', href: '/' },
      { name: 'Link 4', href: '/' },
    ],
  },
  {
    name: 'Tab 2',
    links: [
      { name: 'Link 1', href: '/' },
      { name: 'Link 2', href: '/' },
      { name: 'Link 3', href: '/' },
      { name: 'Link 4', href: '/' },
    ],
  },
]

const today = new Date()
---

<footer class='container mx-auto flex flex-col gap-16 py-8'>
  <div class='grid grid-cols-2 max-w-md'>
    {
      links.map((link) => (
        <div class='flex flex-col gap-4'>
          <p class='text-muted-foreground'>{link.name}</p>
          <ul class='gap-4 flex flex-col'>
            {link.links.map((link) => (
              <li>
                <a href={link.href} class='hover:underline'>
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
  <div class='flex flex-col md:flex-row md:justify-between gap-4'>
    <p class='text-muted-foreground'>
      &copy; {today.getFullYear()} - Site rights
    </p>
    <ul
      class='flex gap-8 text-xs md:text-base [&_li]:underline [&_li]:underline-offset-5 [&_a]:hover:text-muted-foreground'
    >
      <li><a href='/'>Terms</a></li>
      <li><a href='/'>Privacy</a></li>
      <li><a href='/'>Data</a></li>
    </ul>
  </div>
</footer>
